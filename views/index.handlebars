<div class="container">

    <div class="row justify-content-center">
        <img src="/assets/img/burger.png">
    </div>

    <div class="row justify-content-center">
        <h1>Burgers!</h1>
    </div>

    <div class="row justify-content-center">

        <div class="col-6">
            <h2 class="text-center">Burgers To Be Devoured!</h2>
        </div>
        <div class="col-6">
            <h2 class="text-center">Devoured Burgers!</h2>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-6">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devour=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-6">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>

    <div class="row">
        <h2>Add a Burger</h2>
    </div>
    
    <div class="row">
        <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
            </div>

            <button type="submit">Add Burger</button>
        </form>
    </div>
</div>